      </function>

      <function name="UpdateBubble" funcname="UpdateBubble">
        <param name="Index" desc="" type="int"/>
		<param name="x" desc="" type="int"/>
		<param name="y" desc="" type="int"/>
		<param name="size" desc="" type="float"/>
      </function>
      
      <function name="SetBubbleText" funcname="SetBubbleText">
        <param name="Index" desc="" type="int"/>
		<param name="Text" desc="" type="string"/>
      </function>
	  
	  <function name="DeleteBubble" funcname="DeleteBubble">
        <param name="Index" desc="" type="int"/>
      </function>
    
    </functions>

